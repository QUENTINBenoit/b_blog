{% extends 'base.html.twig' %}

{% block title %}{{ post.title}}{% endblock %}

{% block body %}


<div class="container mx-auto h-screen text-white rounded-3xl m-4">
        <h1 class="e text-center text-2xl font-bold">{{ post.title}}</h1>

        <h2 class="text-sm text-center mt-6">Publier le {{ post.createdAt|date('d/m/Y') }}</h2>

        {% if post.thumbnail %}
          <img 
            class="rouded-t-lg"
            src="{{vich_uploader_asset(post.thumbnail, 'imageFile')}}" 
            alt=" {{ post.thumbnail.imageName}}"
            >
        {% endif %}

        <div class="w-2/3 mx-auto my-12 leading-6">
          {{post.content|raw}}
          <p class="text-sm mt-8">
           Derni√©re mise a jour le {{post.updatedAt|date('d/m/Y')}}
          </p>
        </div>



</div>

 
 
{% endblock %}
